
<h1>Friends</h1>

<table class="table  table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Description</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%=link_to friend.first_name + ' ' + friend.last_name,friend %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.phone_number %></td>
        <td><%= friend.description %></td>
        <td><%= link_to 'delete', friend,class: "btn btn-outline-danger" , method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path ,class: "btn btn-dark"%>
